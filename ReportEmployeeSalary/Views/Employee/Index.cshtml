@model IEnumerable<Entities.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Employee</h2>



@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Documento</h4>
        <hr />

        <div class="form-group">
            @Html.Label("id", "identification:", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.TextBox("id", null, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Obtener empleados" class="btn btn-default" />
            </div>
        </div>

    </div>
}
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Contract Type
            </th>
            <th>
                Role Id
            </th>
            <th>
                Role Name
            </th>
            <th>
               Hourly Salary
            </th>
            <th>
                Monthly Salary
            </th>
            <th>
                Annual Salary
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contractTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.roleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.roleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hourlySalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monthlySalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnualSalary)
            </td>

        </tr>
        }

    </table>


